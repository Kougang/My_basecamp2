<div class="container mt-4">
  <h1 class="mb-4 text-center">Edit Thread</h1>
  
  <%= form_with(model: [@project, @thread], local: true, class: "bg-light p-4 rounded shadow-sm") do |form| %>
    <% if @thread.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(@thread.errors.count, "error") %> prohibited this thread from being saved:</h4>
        <ul class="mb-0">
          <% @thread.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="mb-3">
      <%= form.label :title, class: "form-label fw-bold" %>
      <%= form.text_field :title, class: "form-control", placeholder: "Enter thread title" %>
    </div>
    
    <div class="mb-3">
      <%= form.label :content, class: "form-label fw-bold" %>
      <%= form.text_area :content, rows: 5, class: "form-control", placeholder: "Enter thread content" %>
    </div>
    
    <div class="d-flex justify-content-between">
      <%= form.submit "Update Thread", class: "btn btn-primary" %>
      <%= link_to "Back to Project", project_path(@project), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>



