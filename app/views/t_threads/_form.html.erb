<%= form_with(model: [@project, @thread], local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content, required: true %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
