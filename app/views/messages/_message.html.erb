<div>
    <p><%= message.content %> - Posted by  <strong> <%= message.user.first_name || "Unknown User" %> </strong> </p>
    <%#= message.user.name.presence || "Unknown User" %>

    <% if current_user == message.user || current_user.role == 'admin' %>
    <div style="display: flex; gap: 10px;">
      <%= link_to "Edit", edit_project_t_thread_message_path(message.t_thread.project, message.t_thread, message), class: "btn btn-warning btn-sm" %>
      <%= form_with url: project_t_thread_message_path(message.t_thread.project, message.t_thread, message), method: :delete, local: true do %>
        <%= submit_tag "Delete", class: "btn btn-danger btn-sm" %>
      <% end %>
    </div>
  <% end %>


</div>