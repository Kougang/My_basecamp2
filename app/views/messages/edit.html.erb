<div class="container mt-4">
  <h1 class="mb-4">Edit Message</h1>
  
  <%= form_with(model: [@thread.project, @thread, @message], local: true, class: "bg-light p-4 rounded shadow-sm") do |form| %>
    <div class="mb-3">
      <%= form.label :content, class: "form-label fw-bold" %>
      <%= form.text_area :content, rows: 3, class: "form-control", placeholder: "Edit your message here..." %>
    </div>

    <div class="d-flex justify-content-between">
      <%= form.submit "Update Message", class: "btn btn-primary" %>
      <%= link_to 'Back', project_t_thread_path(@thread.project, @thread), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>


