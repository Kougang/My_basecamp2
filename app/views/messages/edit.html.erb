<h1>Edit Message</h1>

<%= form_with(model: [@thread.project, @thread, @message], local: true) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 3 %>
  </div>

  <div class="actions">
    <%= form.submit "Update Message", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', project_t_thread_path(@thread.project, @thread), class: "btn btn-secondary" %>
